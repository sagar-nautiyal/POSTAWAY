{
    "openapi": "3.0.4",
    "info":{
        "version":"1.0.0",
        "description":"API Documentation for POSTAWAY application",
        "title":"POSTAWAY"
    },
    "servers":[
        {
            "url": "http://localhost:3000"
        }
    ],
    "components":{
        "securitySchemes":{
            "JWT":{
                "in":"header",
                "name":"Authorization",
                "type":"apiKey"
            }
        }
    },
    "paths":{
        "/api/post/all":{
           "get":{
                "summary":"Retreive All Posts",
                "description":"This will get you all the posts",
                "tags":["Posts"],
                "security":[{
                    "JWT":{}
                }],
                "responses":{
                    "200":{
                        "description":"OK"
                    },
                    "400":{
                        "description":"Unauthorized"
                    }
                }
           } 
        },
        "/api/post/{id}":{
           "get":{
                "summary":"Retreive Specific Post",
                "description":"Retreive Specific Post By ID",
                "tags":["Posts"],
                "security":[{
                    "JWT":{}
                }],
                "parameters":[{
                    "name":"id",
                    "in":"path",
                    "required":true,
                    "schema":{
                        "type":"string"
                    },
                    "description": "ID of the post to receive"
                }],
                "responses":{
                    "200":{
                        "description":"OK"
                    },
                    "400":{
                        "description":"Unauthorized"
                    }
                }
           },
           "put":{"summary":"Update Specific Post",
                "description":"update Specific Post By ID",
                "tags":["Posts"],
                "security":[{
                    "JWT":{}
                }],
                "parameters":[{
                    "name":"id",
                    "in":"path",
                    "required":true,
                    "schema":{
                        "type":"string"
                    },
                    "description": "ID of the post to update"
                }],
                "requestBody":{
                    "content":
                    {
                        "multipart/form-data":{
                            "schema":
                            {
                                "type":"object",
                                "properties":{
                                    "caption":{
                                        "type":"string"
                                    },
                                    "imageUrl":{
                                        "type": "string",
                                        "format":"binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"OK"
                    },
                    "400":{
                        "description":"Unauthorized"
                    }
                }
           },
           "delete":{"summary":"Delete Specific Post",
                "description":"Delete Specific Post By ID",
                "tags":["Posts"],
                "security":[{
                    "JWT":{}
                }],
                "parameters":[{
                    "name":"id",
                    "in":"path",
                    "required":true,
                    "schema":{
                        "type":"string"
                    },
                    "description": "ID of the post to delete"
                }],
                "responses":{
                    "200":{
                        "description":"OK"
                    },
                    "400":{
                        "description":"Unauthorized"
                    }
                }
           } 
        },
        "/api/post":{
           "get":{
                "summary":"Retreive Posts",
